<mvc:View 
	controllerName="sap.ui.dashxsap.controller.entityOverview01"
	xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout" xmlns="sap.m" >
	<VBox width="100%" busy="{detailView>/busy}">
		<layout:HorizontalLayout
			id="TileContainerExpanded"
			allowWrapping="true"
			content="{dataTiles>/tiles}">
				
			<GenericTile
				header="{dataTiles>header}"
				subheader="{dataTiles>subheader}"
				state="{=${state} || 'Loaded'}"
				press="press"
				class="sapUiTinyMarginBegin sapUiTinyMarginTop sapUiTinyMarginBottom">
				<tileContent>
					<TileContent unit="{dataTiles>unit}" footer="{dataTiles>footer}">
						<content>
							<NumericContent
								value="{
									parts:[{path:'dataTiles>value'},{path:'dataTiles>unit'}],
									type: 'sap.ui.model.type.Currency',
									formatOptions: {showMeasure: false}
								}"
								valueColor="{dataTiles>valuecolor}"
								indicator="{dataTiles>trend}"
								scale="{dataTiles>scale}" />
						</content>
					</TileContent>
				</tileContent>
			</GenericTile>
		</layout:HorizontalLayout>
	</VBox>	

</mvc:View>