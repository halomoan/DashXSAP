<mvc:View 
	controllerName="sap.ui.dashxsap.controller.menuView02"
	xmlns:mvc="sap.ui.core.mvc" xmlns:layout="sap.ui.layout" xmlns="sap.m" >
	
	<layout:HorizontalLayout allowWrapping="true" content="{dataTiles>/tiles}" busy="{detailView>/overviewBusy}">
		<GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop sapUiTinyMarginBottom tileLayout" header="{dataTiles>header}" subheader="{dataTiles>subheader}" press="press">
		<tileContent>
			<TileContent unit="{dataTiles>unit}" footer="{dataTiles>footer}">
				<content>
					<NumericContent scale="{dataTiles>scale}" value="{dataTiles>value}"
						valueColor="{dataTiles>valuecolor}" indicator="{dataTiles>indicator}" />
				</content>
			</TileContent>
		</tileContent>
	</GenericTile>
	</layout:HorizontalLayout>
</mvc:View>