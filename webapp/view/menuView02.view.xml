<mvc:View
		controllerName="sap.ui.dashxsap.controller.menuView02"
		xmlns="sap.uxap"
		xmlns:m="sap.m"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:semantic="sap.m.semantic"
		xmlns:l="sap.ui.layout"
		xmlns:core="sap.ui.core"
		xmlns:sections="sap.ui.dashxsap.menuView02B"
		height="100%" displayBlock="true">

	<semantic:DetailPage
			navButtonPress="onNavBack"
			showNavButton="{detailView>/showNav}"
			title="{i18n>dashboardName}"
			busy="{detailView>/busy}"
			showFooter="{device>/system/desktop}"
			busyIndicatorDelay="{detailView>/delay}">

	
	<ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="false" subSectionLayout="TitleOnLeft"
					  showTitleInHeaderContent="true" showHeaderContent="true">
		<headerTitle>
			<ObjectPageHeader objectImageURI="images/PPHGLogo.png"
							  objectImageShape=""
							  objectTitle="Pan Pacific Singapore"
							  objectSubtitle="Country: {headerData>/country}"
							  objectImageAlt="Hotel"
							  id="ObjectPageLayoutHeaderTitle"
							  isObjectIconAlwaysVisible="false"
							  isObjectTitleAlwaysVisible="false"
							  isObjectSubtitleAlwaysVisible="false"
							  isActionAreaAlwaysVisible="true"
							  showPlaceholder="true">
				<!--<navigationBar>
					<m:Bar>
						<m:contentLeft>
						
						</m:contentLeft>
						<m:contentMiddle>
							<m:Text text="Month To Date"/>
						</m:contentMiddle>
					</m:Bar>
				</navigationBar>
				-->
				<actions>
					
				</actions>
			</ObjectPageHeader>
			
		</headerTitle>
		<headerContent>
			<l:VerticalLayout>
				<m:Label text="{entityData>/header/region}"/>
			</l:VerticalLayout>	
			
			<l:VerticalLayout>
				<m:Label text="Total Room"/>
				<m:ObjectNumber number="{entityData>/header/totalroom}" numberUnit="UN"></m:ObjectNumber>	
			</l:VerticalLayout>
			
			
		
		</headerContent>
		<sections>
			<ObjectPageSection title="{i18n>overview}">
				<subSections>
					<ObjectPageSubSection title=" ">
						<blocks>
							<l:HorizontalLayout
									id="TileContainerExpanded"
									allowWrapping="true"
									content="{entityData>/tiles}">
									<m:GenericTile
										header="{entityData>header}"
										subheader="{entityData>subheader}"
										state="{=${state} || 'Loaded'}"
										press="pressTile"
										class="sapUiTinyMarginBegin sapUiTinyMarginTop sapUiTinyMarginBottom">
										<m:tileContent>
											<m:TileContent unit="{entityData>unit}" footer="{entityData>footer}">
												<m:content>
													<m:NumericContent
														value="{
															parts:[{path:'entityData>value'},{path:'entityData>unit'}],
															type: 'sap.ui.model.type.Currency',
															formatOptions: {showMeasure: false}
														}"
														valueColor="{entityData>valuecolor}"
														indicator="{entityData>trend}"
														scale="{entityData>scale}" />
												</m:content>
											</m:TileContent>
										</m:tileContent>
									</m:GenericTile>
							</l:HorizontalLayout>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection title="{i18n>room}">
				<subSections>
					<ObjectPageSubSection title=" ">
						<blocks>
							<m:Table id="idMoreInfoTable" inset="false" 
							items="{
								path: 'entityData>/rooms',
								sorter: {
									path: 'row'
								}
							}">
							<m:columns>
									<m:Column>
										<m:Text text="" />
									</m:Column>
									<m:Column
										hAlign = "End"
										demandPopin="true">
										<m:Text text="MTD Actual" />
									</m:Column>
									<m:Column
										hAlign = "End"
										demandPopin="true">
										<m:Text text="MTD Budget" />
									</m:Column>
									<m:Column
										hAlign = "End"
										demandPopin="true">
										<m:Text text="+/-" />
									</m:Column>
									<m:Column
										hAlign = "End"
										demandPopin="true">
										<m:Text text="%" />
									</m:Column>
									
							</m:columns>
							<m:items>
								<m:ColumnListItem>
									<m:cells>
										<m:Text text="{entityData>row}"></m:Text>
										<m:ObjectNumber
											number="{parts:[{path:'entityData>mtdact'},{path:'entityData>unit'}], formatter:'sap.ui.dashxsap.model.Formatter.currencyValue'}"
											unit="{entityData>unit}"
										/>	
										<m:ObjectNumber
											number="{parts:[{path:'entityData>mtdbgt'},{path:'entityData>unit'}], formatter:'sap.ui.dashxsap.model.Formatter.currencyValue'}"
											unit="{entityData>unit}"
										/>	
										<m:ObjectNumber
											number="{parts:[{path:'entityData>mtdvar'},{path:'entityData>unit'}], formatter:'sap.ui.dashxsap.model.Formatter.currencyValue'}"
											unit="{entityData>unit}"
										/>	
										<m:ObjectNumber
											number="{parts:[{path:'entityData>mtdperc'},{path:'entityData>unit'}], formatter:'sap.ui.dashxsap.model.Formatter.currencyValue'}"
											unit="%"
										/>	
									</m:cells>	
								</m:ColumnListItem>
							</m:items>		
							</m:Table>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
				<ObjectPageSection title="{i18n>rbe}">
				<subSections>
					<ObjectPageSubSection title=" ">
						<blocks>
							<sections:rbe id="rbeBlock"/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
			<ObjectPageSection title="{i18n>mod}">
				<subSections>
					<ObjectPageSubSection title=" ">
						<blocks>
							<sections:mod id="modBlock"/>
						</blocks>
					</ObjectPageSubSection>
				</subSections>
			</ObjectPageSection>
		</sections>
	</ObjectPageLayout>
	</semantic:DetailPage>
</mvc:View>