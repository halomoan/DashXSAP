<mvc:View
		controllerName="sap.ui.dashxsap.controller.geoView01"
		xmlns="sap.m"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:semantic="sap.m.semantic"
		xmlns:l="sap.ui.layout"
		xmlns:core="sap.ui.core"
		xmlns:vbm="sap.ui.vbm" height="100%" displayBlock="true">

	<semantic:DetailPage
			id="page"
			navButtonPress="onNavBack"
			showNavButton="{device>/system/phone}"
			title="{i18n>geoView01Title}"
			busy="{detailView>/busy}"
			busyIndicatorDelay="{detailView>/delay}">

	<semantic:content>
		<l:FixFlex class="fixFlexVertical">
		<l:fixContent>
			<Panel expandable="true" expanded="{= !${device>/system/phone} }" headerText="Description">
				<headerToolbar>
					<Toolbar>
						<Title text="{geoData>/Title}" />
						<ToolbarSpacer />
						<Button id="btnResize" icon="sap-icon://resize" press="onPressResize"
							tooltip="Restore" />
					</Toolbar>
				</headerToolbar>
				<content>
					<HBox class='settingsHBox'>
                    	<VBox class='settingsBox'>
                        <Label text="{i18n>SetFocus}" design="Bold" class='settingsLabel'></Label>
                        <ComboBox items="{path: 'detailView>/countries',sorter: { path: 'detailView>name' }}" change="onSetFocus">
                        	<core:Item key="{detailView>coordinate}" text="{detailView>name}"/>
                        </ComboBox>
                    	</VBox>
                    </HBox>
				</content>
			</Panel>
		</l:fixContent>
		<l:flexContent>
			<vbm:AnalyticMap id="vbi" width="100%" height="100%"
				initialPosition="50;10;0" regionClick="onRegionClick"
				regionContextMenu="onRegionContextMenu">
				<vbm:vos>
					<vbm:Circles id="mainCircle" items="{geoData>/Circles}" click="onClickItem"
						contextMenu="onContextMenuItem">
						<vbm:Circle position="{geoData>pos}" tooltip="{geoData>tooltip}" radius="{geoData>radius}"
							color="{geoData>color}" colorBorder="{geoData>colorBorder}"
							hotDeltaColor="{geoData>hotDeltaColor}" click="onClickCircle"
							contextMenu="onContextMenuCircle" />
					</vbm:Circles>
					<vbm:Spots id="spots" items="{geoData>/Spots}" click="onClickItem"
						contextMenu="onContextMenuItem">
						<vbm:Spot position="{geoData>pos}" type="{geoData>type}" tooltip="{geoData>name} {geoData>tooltip}"
							text="{geoData>text}" click="onClickSpot" contextMenu="onContextMenuSpot" />
					</vbm:Spots>
				</vbm:vos>	
				<vbm:legend>
					<vbm:Legend id="legend" caption="Legend" items="{geoData>/Legend}">
						<vbm:LegendItem text="{geoData>name}" color="{geoData>color}" click="onLegendClick" />
					</vbm:Legend>
				</vbm:legend>
			</vbm:AnalyticMap>
		</l:flexContent>
	</l:FixFlex>

	</semantic:content>
	</semantic:DetailPage>
</mvc:View>