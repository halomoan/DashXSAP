<core:FragmentDefinition
	  xmlns="sap.m"
      xmlns:layout="sap.ui.layout"
      xmlns:core="sap.ui.core"
      xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
      xmlns:viz.data="sap.viz.ui5.data"
      xmlns:viz="sap.viz.ui5.controls">
      <layout:FixFlex id='chartFixFlexchart04' minFlexSize="500" busy="{chart04View>/busy}"
		  busyIndicatorDelay="{chart04View>/delay}">
      	<layout:flexContent>
      		
      		<HBox class='settingsHBox'>
      			 <VBox class='settingsBox'>
                        <Label text='{chart04View>/type/name}' design="Bold" class='settingsLabel'></Label>
                        <RadioButtonGroup id='typeRadioGroup'
                            buttons="{path: 'chart04View>/type/values'}" >
                            <buttons>
                                <RadioButton class='settingsRadio' text="{chart04View>name}" select='onTypeSelected'/>
                            </buttons>
                        </RadioButtonGroup>
                    </VBox>
      		</HBox>
      		
      	</layout:flexContent>	
      	<layout:flexContent>	
    	   <viz:Popover id="idPopOverchart04"></viz:Popover>	
           <viz:VizFrame id="idVizFramechart04" uiConfig="{applicationSet:'fiori'}"
                height='100%' width="100%" vizType='stacked_bar'>
                <viz:dataset>
                     <viz.data:FlattenedDataset data="{chart04Data>/DataSet}">
                        <viz.data:dimensions>
                           <viz.data:DimensionDefinition name="Entity"
                                value="{chart04Data>Entity}" />
                            <viz.data:DimensionDefinition name="Dimension"
                                value="{chart04Data>Dimension}" />
                        </viz.data:dimensions>
                        <viz.data:measures>
                            <viz.data:MeasureDefinition name="{chart04Data>/Legend/0}"
                                value="{chart04Data>KF1}" />
                        </viz.data:measures>
                    </viz.data:FlattenedDataset>
                </viz:dataset>

                <viz:feeds>
                    <viz.feeds:FeedItem uid="valueAxis" type="Measure"
                        values="{chart04Data>/Legend}" />
                    <viz.feeds:FeedItem uid="categoryAxis" type="Dimension"
                        values="Entity" />
                    <viz.feeds:FeedItem uid="color" type="Dimension"
                        values="Dimension" />
                </viz:feeds>
            </viz:VizFrame>
           
        </layout:flexContent>
      </layout:FixFlex>
</core:FragmentDefinition>