<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">
   <Dialog
      id="moreInfoDialog"
      stretch = "true"
      title="{detailView>/Name}">
   	  <Table id="idMoreInfoTable"
		inset="false"
		items="{
			path: 'detailView>/spotItems',
			sorter: {
				path: 'id'
			}
		}">
   	  	<columns>
			<Column
				minScreenWidth="Tablet">
				<Text text="" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				hAlign = "End"
				demandPopin="true">
				<Text text="{detailView>/displayDate}" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				hAlign = "End"
				demandPopin="true">
				<Text text="MTD Actual" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				hAlign = "End"
				demandPopin="true">
				<Text text="MTD Budget" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				hAlign = "End"
				demandPopin="true">
				<Text text="MTD LY" />
			</Column>
			<Column
				minScreenWidth="Tablet"
				hAlign = "End"
				demandPopin="true">
				<Text text="YTD Actual" />
			</Column>
				<Column
				minScreenWidth="Tablet"
				hAlign = "End"
				demandPopin="true">
				<Text text="YTD Budget" />
			</Column>
				<Column
				minScreenWidth="Tablet"
				hAlign = "End"
				demandPopin="true">
				<Text text="YTD LY" />
			</Column>
		</columns>	
		<items>
			<ColumnListItem>
				<cells>
					<Link
						text="{detailView>text}"
						press="onDetailPopover"
						/>
						
					<ObjectNumber
						number="{path:'detailView>day'}"
							unit="{detailView>unit}"
							/>	
					<ObjectNumber
							number="{path:'detailView>mtdact'}"
							unit="{detailView>unit}" />	
					<ObjectNumber
							number="{path:'detailView>mtdbgt'}"
							unit="{detailView>unit}" />	
					<ObjectNumber
							number="{path:'detailView>mtdly'}"
							unit="{detailView>unit}" />	
					<ObjectNumber
							number="{path:'detailView>ytdact'}"
							unit="{detailView>unit}" />			
					<ObjectNumber
							number="{path:'detailView>ytdbgt'}"
							unit="{detailView>unit}" />		
					<ObjectNumber
							number="{path:'detailView>ytdly'}"
							unit="{detailView>unit}" />		
				</cells>
			</ColumnListItem>	
		</items>			
   	 </Table>
     <beginButton>
         <Button
            text="{i18n>close}"
            press="onCloseDialog"/>
      </beginButton>
	</Dialog>
</core:FragmentDefinition>