<mvc:View xmlns:core="sap.ui.core" 
		xmlns:mvc="sap.ui.core.mvc" 
		xmlns:layout="sap.ui.layout"
		xmlns:semantic="sap.m.semantic" 
		xmlns="sap.m" 
		controllerName="sap.ui.dashxsap.controller.chartContainer">
	<semantic:DetailPage
				id="chartContainer"
				navButtonPress="onNavBack"
				showNavButton="{device>/system/phone}"
				title="{i18n>dashboardName}"
				busy="{detailView>/busy}"
				busyIndicatorDelay="{detailView>/delay}">
			<semantic:content>
		
            <Panel id='settingsPanel' class="panelStyle" expandable="true" expanded="false" headerText="{detailView>/title}" width="auto">
                <content>
                    <HBox class='settingsHBox'>
                    
                    <VBox class="sapUiSmallMargin">
						<Label text = '{i18n>selectRegion}' class='settingsLabel'></Label>
                        <Select id='selectRegion' class='settingsSelect' selectedKey='{detailView>/selectedRegion}'  change='onRegionChange'
                            items="{path: '/MyRegions'}">
                            <items>
                                <core:Item text="{MyRegionID} - {ShortText}" key="{MyRegionID}" />
                            </items>
                        </Select>
					</VBox>
					</HBox>
                </content>
            </Panel>
        
			<layout:Grid>
					<layout:VerticalLayout id="v2" class="sapUiTinyMargin" width="100%" height="100%">
						<layout:layoutData>
								<layout:GridData
									span="L8 M8 S12"
								/>
						</layout:layoutData>
					</layout:VerticalLayout>
					<layout:VerticalLayout id="v1" class="sapUiTinyMargin" width="100%" >
							<layout:layoutData>
								<layout:GridData
									span="L4 M4 S12"
								/>
							</layout:layoutData>
					</layout:VerticalLayout>	
				</layout:Grid>
			</semantic:content>	
	</semantic:DetailPage>		
</mvc:View>